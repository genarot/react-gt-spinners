{
    "env": {
        "browser": true,
        "es6": true
    },
    "plugins": [
      "prettier",
      "react"
    ],
    "extends": [
      "plugin:react/recommended",
      "plugin:import/react",
      "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "indent": ["error", 4],
      "comma-dangle": "off",
      "prettier/prettier": "error",
      "react/jsx-indent": ["error", 4],
      "import/prefer-default-export": "off"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js",".jsx"]
        }
      }
    }
}
